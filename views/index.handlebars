<div class="container">
    <div class="row">
        <div class="col-md-12 text-center" id="top-bar">
            <!--<img src="/assets/images/file.png" alt="pambazo"/>-->
            <h1>Devour a Pambazo</h1>
        </div>
    <div class="col-md-6 text-center" class="task">
        <div class="row">
            {{#each pambazoData}}
              {{#unless this.devoured}}
                <div class="col-md-9 text-center">
                    <pre>{{this.id}}.{{this.pambazo_name}}</pre>
                </div>
        <div class="col-md-3 text-center">
            <form class="devour-form button-size">
                <input  input type="hidden" class="pambazo_id" type="text" value={{this.id}}>
                <br>
                <button type="submit" class="btn btn-default">Devour it!</button>
            </form>
        </div>
        {{/unless}}
        {{/each}}
        </div>
    </div>
        <div class="col-md-6 text-center" class="task">
            {{#each pambazo_data}}
            {{#if this.devoured}}
                <input class="form-control" type="text" placeholder="{{this.id}} . {{this.pambazo_name}}" readonly>
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-12 text-center enter_section">
            <form action="/pambazos/create" method="POST">
                <input type="text" class="form-control" name="pambazo" value="" id="enter_text">
                <button type="submit" class="btn btn-primary" id="text-enter-button">submit</button>
            </form>
            <p>enter a pambazo you want to eat Click the "Submit" button</p>
        </div>
    </div>
</div>
